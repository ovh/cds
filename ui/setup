#!/bin/sh

cd /data

if [ ! -z ${BASE_URL} ]; then
    echo "replace base url with ${BASE_URL}"
    sed -i "s#base.*href.*#base href=\"${BASE_URL}\"\>#" index.html
fi;

cd assets
if [ ! -z ${VERSION} ]; then
    echo "replace base url with ${VERSION}"
    sed -i "s#0#$VERSION#" version.json
fi;

echo "################"
echo "S.T.A.R.T.I.N.G"
echo "################"
cd /data && ./caddy
